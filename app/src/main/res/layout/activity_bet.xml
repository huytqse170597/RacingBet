<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn chiến mã và số xu bạn muốn đặt cược"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp" />

    <!-- Tổng tiền hiện có -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvLabelCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số xu hiện có:"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF0058"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvLabelBet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng cược:"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalBet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF0058"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvLabelRemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số xu còn lại:"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalRemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF0058"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Ngựa 1 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chiến mã số 1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:textColor="#C64ADC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <CheckBox
            android:id="@+id/cbHorse1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/horse1"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/etBet1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="Số xu cược"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <!-- Ngựa 2 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chiến mã số 2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:textColor="#C64ADC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <CheckBox
            android:id="@+id/cbHorse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/horse2"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/etBet2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="Số xu cược"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <!-- Ngựa 3 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chiến mã số 3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:textColor="#C64ADC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp">

        <CheckBox
            android:id="@+id/cbHorse3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/horse3"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/etBet3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:hint="Số xu cược"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <!-- Nút handle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUAY LẠI"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#979393" />

        <Button
            android:id="@+id/btnConfirmBet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐẶT CƯỢC"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginHorizontal="10dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E91E63" />

    </LinearLayout>


</LinearLayout>
